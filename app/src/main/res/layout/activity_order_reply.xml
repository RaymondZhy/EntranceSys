<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.newabel.entrancesys.ui.activity.OrderReplyActivity">

    <include layout="@layout/title_bar" />


    <RelativeLayout
        android:id="@+id/rl_accept"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/divider_top_height"
        android:background="@drawable/selector_click_style"
        android:paddingLeft="@dimen/margin_page_left"
        android:paddingRight="@dimen/margin_page_right">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/order_reply_str_1"
            android:textColor="@color/text_tittle"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="@string/order_reply_str_3"
            android:lines="1"
            android:text=""
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/selector_click_style"
        android:paddingLeft="@dimen/margin_page_left"
        android:paddingRight="@dimen/margin_page_right">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/order_reply_str_2"
            android:textColor="@color/text_tittle"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_entrance_data_checked" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_page_left"
        android:paddingRight="@dimen/margin_page_right"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        >

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/order_reply_str_4"
            android:textColor="@color/text_tittle"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_3"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="@string/order_reply_str_5"
            android:maxLines="3"
            android:maxLength="140"
            android:text=""
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</LinearLayout>
