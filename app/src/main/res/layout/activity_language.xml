<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.LanguageActivity">

    <include layout="@layout/title_bar"/>

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:textSize="@dimen/sp_14"
        android:textColor="@drawable/selector_language_fonts"
        android:text="@string/language_str_1"
        android:gravity="center_vertical"
        android:background="@drawable/selector_click_style"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@color/common_app_bg"/>
    <TextView
        android:id="@+id/tv_simplified"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:textSize="@dimen/sp_14"
        android:textColor="@drawable/selector_language_fonts"
        android:text="@string/language_str_2"
        android:gravity="center_vertical"
        android:background="@drawable/selector_click_style"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@color/common_app_bg"/>
    <TextView
        android:id="@+id/tv_traditional"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:textSize="@dimen/sp_14"
        android:textColor="@drawable/selector_language_fonts"
        android:text="@string/language_str_3"
        android:gravity="center_vertical"
        android:background="@drawable/selector_click_style"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@color/common_app_bg"/>
    <TextView
        android:id="@+id/tv_english"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:textSize="@dimen/sp_14"
        android:textColor="@drawable/selector_language_fonts"
        android:text="@string/language_str_4"
        android:gravity="center_vertical"
        android:background="@drawable/selector_click_style"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@color/common_app_bg"/>
</LinearLayout>
