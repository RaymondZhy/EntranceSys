<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.newabel.entrancesys.ui.activity.RegisterQualificationActivity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#999999"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:paddingBottom="@dimen/dp_7"
                android:paddingTop="@dimen/dp_7"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_app_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/margin_page_left"
                android:paddingRight="@dimen/margin_page_right"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_qualification_str_14"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_company"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/selector_click_style"
                android:paddingLeft="@dimen/margin_page_left"
                android:paddingRight="@dimen/margin_page_right">

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/register_qualification_str_15"
                    android:textColor="@color/text_tittle"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_7"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="@string/register_qualification_str_16"
                    android:lines="1"
                    android:maxLength="30"
                    android:text=""
                    android:textColor="@color/text_tittle"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_job"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/selector_click_style"
                android:paddingLeft="@dimen/margin_page_left"
                android:paddingRight="@dimen/margin_page_right">

                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/register_qualification_str_17"
                    android:textColor="@color/text_tittle"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_8"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="@string/register_qualification_str_18"
                    android:lines="1"
                    android:maxLength="30"
                    android:text=""
                    android:textColor="@color/text_tittle"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_app_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/margin_page_left"
                android:paddingRight="@dimen/margin_page_right"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_qualification_str_1"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/register_basic_str_2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/margin_page_left"
                android:paddingRight="@dimen/margin_page_right"
                android:paddingTop="@dimen/dp_15">

                <ImageView
                    android:id="@+id/iv_certificate"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@mipmap/ic_add_image"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/iv_certificate"
                    android:text="@string/register_qualification_str_2"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/iv_certificate"
                    android:text="@string/register_qualification_str_3"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_app_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/margin_page_left"
                    android:paddingRight="@dimen/margin_page_right">

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/register_qualification_str_4"
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_certificate_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_2"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="@string/register_qualification_str_5"
                        android:lines="1"
                        android:maxLength="30"
                        android:text=""
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/margin_page_left"
                    android:paddingRight="@dimen/margin_page_right">

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/register_qualification_str_6"
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/tv_university"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_3"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="@string/register_qualification_str_7"
                        android:lines="1"
                        android:maxLength="30"
                        android:text=""
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@drawable/selector_click_style"
                    android:paddingLeft="@dimen/margin_page_left"
                    android:paddingRight="@dimen/margin_page_right">

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/register_qualification_str_8"
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_4"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="@string/register_qualification_str_9"
                        android:lines="1"
                        android:maxLength="30"
                        android:text=""
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/margin_page_left"
                    android:paddingRight="@dimen/margin_page_right">

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/register_qualification_str_10"
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/tv_profession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_5"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="@string/register_qualification_str_11"
                        android:lines="1"
                        android:maxLength="30"
                        android:text=""
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_degree"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@drawable/selector_click_style"
                    android:paddingLeft="@dimen/margin_page_left"
                    android:paddingRight="@dimen/margin_page_right">

                    <TextView
                        android:id="@+id/tv_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/register_qualification_str_12"
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_6"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="@string/register_qualification_str_13"
                        android:lines="1"
                        android:maxLength="30"
                        android:text=""
                        android:textColor="@color/text_tittle"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
