<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_sex">

    <RelativeLayout
        android:id="@+id/rl_male"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:background="@drawable/selector_dialog_sex_male">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/text_tittle"
            android:textSize="@dimen/sp_14"
            android:text="@string/male"
            android:layout_centerVertical="true"
            />

        <com.newabel.entrancesys.ui.widget.PhotoCheckBox
            android:id="@+id/cb_male"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:cb_dot_radius="@dimen/dp_5"
            app:cb_inner_shape="dot"
            app:cb_solid_color="@color/blue"
            app:cb_inner_shape_color="@color/blue"
            app:cb_stroke_color="@color/blue" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_female"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/selector_dialog_sex_female">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/text_tittle"
            android:textSize="@dimen/sp_14"
            android:text="@string/female"
            android:layout_centerVertical="true"
            />

        <com.newabel.entrancesys.ui.widget.PhotoCheckBox
            android:id="@+id/cb_female"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:cb_dot_radius="@dimen/dp_5"
            app:cb_inner_shape="dot"
            app:cb_solid_color="@color/blue"
            app:cb_inner_shape_color="@color/blue"
            app:cb_stroke_color="@color/blue" />
    </RelativeLayout>
</LinearLayout>
